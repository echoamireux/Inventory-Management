/* 统一日志卡片组件样式 */

/* === 布局工具类 (组件内重新定义，确保生效) === */
.flex-row {
  display: flex !important;
  flex-direction: row !important;
}

.items-center {
  align-items: center !important;
}

.justify-between {
  justify-content: space-between !important;
}

.flex-1 {
  flex: 1 !important;
}

.mb-10 {
  margin-bottom: 10px !important;
}

/* === 卡片容器 === */
.log-card {
  background: var(--color-bg-card, #fff);
  border-radius: var(--radius-lg, 12px);
  padding: var(--spacing-md, 12px) var(--spacing-lg, 16px);
  margin-bottom: var(--spacing-md, 12px);
  box-shadow: var(--shadow-sm, 0 2px 8px rgba(0, 0, 0, 0.04));
}

.log-card-hover {
  background: var(--color-bg-page, #f7f8fa);
}

/* === 类型标签 === */
.log-type-tag {
  display: inline-block;
  font-size: 12px;
  font-weight: 500;
  padding: 2px 8px;
  border-radius: var(--radius-sm, 4px);
  margin-right: 8px;
  flex-shrink: 0;
}

.tag-success {
  background: var(--color-success-light, #e8f7ef);
  color: var(--color-success, #07c160);
}

.tag-warning {
  background: var(--color-warning-light, #fff7e6);
  color: var(--color-warning, #fa8c16);
}

.tag-danger {
  background: var(--color-danger-light, #ffeded);
  color: var(--color-danger, #ee0a24);
}

.tag-primary {
  background: var(--color-brand-light, #e6f4ff);
  color: var(--color-brand, #1989fa);
}

/* === 产品代码 === */
.log-code {
  font-family: var(--font-mono);
  font-size: 14px;
  font-weight: 600;
  color: var(--color-brand, #1989fa);
}

/* === 时间 === */
.log-time {
  font-size: 12px;
  color: var(--color-text-secondary, #969799);
}

/* === 物料名称 === */
.log-name {
  font-size: 15px;
  font-weight: 500;
  color: var(--color-text-primary, #323233);
}

/* === 批号标签 === */
.log-batch {
  font-size: 11px;
  color: var(--color-text-secondary, #969799);
  background: var(--color-bg-page, #f7f8fa);
  padding: 2px 6px;
  border-radius: var(--radius-sm, 4px);
  margin-left: 8px;
}

/* === 数量 === */
.log-qty {
  font-family: var(--font-mono);
  font-size: 18px;
  font-weight: 700;
  color: var(--color-text-primary, #323233);
}

.qty-success {
  color: var(--color-success, #07c160) !important;
}

.qty-danger {
  color: var(--color-danger, #ee0a24) !important;
}

/* === 底部行 === */
.log-footer {
  padding-top: 10px;
  border-top: 1px solid var(--color-border-light, #f0f0f0);
}

/* === 备注 === */
.log-note {
  font-size: 12px;
  color: var(--color-text-secondary, #969799);
  max-width: 180px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* === 操作人 === */
.log-operator {
  font-size: 12px;
  color: var(--color-text-secondary, #969799);
}

.operator-icon {
  margin-right: 4px;
}
