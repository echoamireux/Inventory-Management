/* components/withdraw-dialog/index.wxss */
/* 注意：通用样式已移至 app.wxss，此文件仅保留组件特有样式 */

/* 导入全局样式（微信小程序组件需显式导入） */
@import "../../app.wxss";

/* 组件特有样式 - 仅保留极少量定制 */
.badge-gray {
  background: var(--color-border-light);
  color: #4B5563;
  padding: 2px 8px;
  border-radius: var(--radius-sm);
  font-size: 12px;
}

/* FIFO 推荐提示样式 */
.fifo-hint {
  background: linear-gradient(135deg, #EEF2FF 0%, #F8FAFC 100%);
  border: 1px solid #E0E7FF;
  border-radius: 8px;
  padding: 12px;
}

.fifo-code {
  font-family: var(--font-mono);
  font-size: 15px;
  font-weight: 600;
  color: var(--color-brand);
  margin: 6px 0 4px 0;
}

.fifo-desc {
  font-size: 11px;
  color: #6B7280;
  line-height: 1.4;
}

