/* pages/inventory-detail/index.wxss */
/* 使用设计令牌统一颜色 */

/* Page Container */
.page-container {
  padding-bottom: 120px;
  background-color: var(--color-bg-page);
  min-height: 100vh;
}

/* 1. Gradient Header */
.header-section {
  background: var(--color-brand-gradient);
  color: #fff;
  padding: 30rpx 40rpx 80rpx 40rpx;
  position: relative;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.header-flex-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-left {
  flex: 1;
  margin-right: 20rpx;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.85;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.header-meta-row {
  display: flex;
  align-items: center;
  opacity: 0.9;
}

.info-id {
  font-family: var(--font-mono);
  font-size: 24rpx;
  opacity: 0.8;
}

/* Quantity in Header */
.qty-display-header {
  display: flex;
  align-items: baseline;
}

.qty-val-header {
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
  margin-right: 8rpx;
}

.qty-unit-header {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 2. Asset Card */
.asset-card {
  background-color: var(--color-bg-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  margin: -50rpx 30rpx 0 30rpx;
  padding: 20rpx;
  position: relative;
  z-index: 10;
}

.location-bar {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: var(--color-bg-page);
  border-radius: var(--radius-lg);
}

.hover-bg {
  background-color: var(--color-bg-hover);
}

.icon-location {
  color: var(--color-brand);
  margin-right: 15rpx;
}

.location-text {
  flex: 1;
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: bold;
  margin-right: 20rpx;
}

.icon-edit {
  color: var(--color-text-secondary);
}

/* 3. Detail Groups */
.detail-groups {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.group-card {
  margin-bottom: 30rpx !important;
  border-radius: var(--radius-lg) !important;
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

/* 4. Fixed Footer */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--color-bg-card);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.action-btn {
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  transition: opacity 0.2s;
}

.btn-move {
  width: 35%;
  background-color: var(--color-brand-light);
  color: var(--color-brand);
  margin-right: 20rpx;
}

.btn-withdraw {
  width: 60%;
  background-color: var(--color-brand);
  color: #fff;
  box-shadow: var(--shadow-brand);
}

.btn-hover-opacity {
  opacity: 0.8;
}

/* 5. Popup */
.popup-content {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-header {
  text-align: center;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: var(--color-text-primary);
}

.popup-subtitle {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.popup-field {
  margin-bottom: 30rpx;
}

.popup-confirm-btn {
  margin-top: auto;
}

/* Loading */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}
