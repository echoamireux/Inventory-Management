/* pages/material-add/index.wxss */
/* 注意：通用样式已移至 app.wxss，此文件仅保留页面特有样式 */

.container {
  padding-bottom: 50px;
  background-color: var(--color-bg-page);
  min-height: 100vh;
}

/* 扫码按钮 */
.scan-btn {
  width: 64px !important;
  padding: 0 !important;
  height: 30px !important;
  line-height: 28px !important;
  text-align: center !important;
  font-size: 13px !important;
  margin-left: 8px;
}

/* 建议框 */
.suggestion-box {
  position: absolute;
  top: 90px;
  left: 16px;
  right: 16px;
  z-index: 999;
  background: #fff;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  max-height: 300px;
  display: flex;
  flex-direction: column;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.suggestion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 16px;
  background-color: var(--color-bg-page);
  border-bottom: 1px solid var(--color-border);
  font-size: 12px;
  color: var(--color-text-secondary);
}

.suggestion-list {
  overflow-y: auto;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  transition: background-color 0.2s;
}

.suggestion-item:active {
  background-color: var(--color-bg-page);
}

.category-tag-pill {
  font-size: 10px;
  color: var(--color-brand);
  background: var(--color-brand-light);
  padding: 2px 6px;
  border-radius: var(--radius-sm);
}

/* 产品代码前缀 */
.product-code-field .van-field__body {
  display: flex !important;
  align-items: center;
}

.product-code-field .van-field__body::before {
  margin-right: 0px;
  font-size: 14px;
  color: var(--color-text-primary);
  font-weight: 400;
  line-height: 24px;
}

.product-code-field.chemical .van-field__body::before { content: "J-"; }
.product-code-field.film .van-field__body::before { content: "M-"; }

/* 标签加粗 */
.field-label-bold {
  font-weight: 600 !important;
  color: var(--color-text-primary) !important;
}

/* 成功弹窗 */
.success-dialog-body { background: #fff; overflow: hidden; }
.text-gray-dark { color: #646566 !important; }
.bg-gray-light { background: var(--color-bg-page) !important; }
.border-none { border: none !important; }
.box-shadow-blue { box-shadow: var(--shadow-brand); }

/* 灰色文字 */
.text-gray-400 { color: var(--color-text-secondary); }
.text-primary { color: var(--color-brand); }
.text-dark { color: var(--color-text-primary); }
