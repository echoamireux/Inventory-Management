.container {
  padding-bottom: 30px;
}

/* List container padding */
.list-container {
  padding: 24rpx;
}

/* Card Style (Pro Max) */
.inventory-card {
  background-color: var(--color-bg-card);
  border-radius: var(--radius-card);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 24rpx;
  padding: 32rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 1px solid rgba(0, 0, 0, 0.02);
}

.inventory-card:active {
  background-color: #fafafa;
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

/* Layout Columns */
.card-left {
  flex: 1;
  padding-right: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.card-right {
  min-width: 140rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

/* Typography */
.text-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-main);
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  letter-spacing: -0.5rpx;
}

.text-code {
  font-size: 24rpx;
  color: var(--color-text-sub);
  font-family: 'SF Mono', 'Roboto Mono', monospace;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  width: fit-content;
}

/* Quantity Big Number */
.text-qty {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--color-primary);
  line-height: 1;
  font-feature-settings: "tnum";
  letter-spacing: -1rpx;
}

.text-unit {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--color-text-sub);
  margin-left: 4rpx;
  vertical-align: middle;
}

.text-location {
  font-size: 22rpx;
  color: var(--color-text-sub);
  margin-top: 12rpx;
  background: #f0f2f5;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

/* Status Tags */
.status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-tag.warning {
  background-color: #fff7e6;
  color: var(--color-warning);
}

.status-tag.danger {
  background-color: #fff1f0;
  color: var(--color-danger);
}

/* Tags Row */
.tags-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* Utilities */
.sticky-top {
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

/* Popup and other utils */
.popup-header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1px solid #f5f6f7;
}

.popup-title {
    font-size: 34rpx;
    font-weight: 600;
    color: var(--color-text-main);
}
