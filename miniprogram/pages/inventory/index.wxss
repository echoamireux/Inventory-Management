/* pages/inventory/index.wxss */
/* 注意：通用样式已移至 app.wxss，此文件仅保留页面特有样式 */

.container {
  padding-bottom: 30px;
}

/* 列表容器 */
.list-container {
  padding: 24rpx;
}

/* 库存卡片 */
.inventory-card {
  background-color: var(--color-bg-card);
  border-radius: var(--radius-card);
  box-shadow: var(--shadow-sm);
  margin-bottom: 24rpx;
  padding: 32rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start; /* 顶部对齐 */
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 1px solid rgba(0, 0, 0, 0.02);
}

/* 导出按钮 (圆形) */
.export-btn-circle {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: var(--color-brand-light);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 4px;
  flex-shrink: 0;
}

.inventory-card:active {
  background-color: #fafafa;
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

/* 布局列 */
.card-left {
  flex: 1;
  padding-right: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.card-right {
  min-width: 140rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start; /* 顶部对齐 */
  padding-top: 4rpx;
}

/* 排版 - 统一规范 */
.text-name {
  font-size: 16px; /* 统一 16px */
  font-weight: 600;
  color: var(--color-brand); /* 料号统一蓝色 */
  font-family: var(--font-mono);
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text-code {
  font-size: 12px; /* 统一 12px */
  color: var(--color-text-secondary);
  font-family: var(--font-mono);
  margin-bottom: 8px;
  display: inline-flex;
  align-items: center;
  background: var(--color-bg-page);
  padding: 2px 6px;
  border-radius: var(--radius-md);
  width: fit-content;
}

/* 数量 - 与料号同大小 */
.text-qty {
  font-size: 16px; /* 统一 16px */
  font-weight: 600;
  color: var(--color-brand);
  font-family: var(--font-mono);
  line-height: 1;
  font-feature-settings: "tnum";
}
.text-qty.warning {
  color: var(--color-warning);
}

.text-unit {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--color-text-secondary);
  margin-left: 4rpx;
  vertical-align: middle;
}

.text-location {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 12rpx;
  background: #f0f2f5;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

/* 状态标签 */
.status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-md);
  font-weight: 500;
}

.status-tag.warning {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.status-tag.danger {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

/* 标签行 */
.tags-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 弹窗 */
.popup-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid var(--color-border-light);
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}
