/* pages/index/index.wxss */
/* 注意：大部分工具类和通用样式已移至 app.wxss，此文件仅保留页面特有样式 */

/* ========== 页面特有样式 ========== */

/* 扫码卡片特效 */
.scan-card {
  border-radius: var(--radius-lg);
  position: relative;
  overflow: hidden;
  background: var(--color-brand-gradient) !important;
  box-shadow: 0 4px 12px rgba(44, 104, 255, 0.3) !important;
}
.scan-card .circle-bg {
  position: absolute;
  right: -30px;
  top: -30px;
  width: 120px;
  height: 120px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

/* bg-primary 备用 */
.bg-primary {
  background: var(--color-brand) !important;
  background: var(--color-brand-gradient) !important;
}

/* shadow-lg 备用 */
.shadow-lg {
  box-shadow: 0 4px 12px rgba(44, 104, 255, 0.3) !important;
}

/* 统计卡片 */
.stat-card {
  border-radius: var(--radius-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  height: 100%;
  box-sizing: border-box;
}

/* 统计背景色 */
.bg-blue-light {
  background-color: #e6f7ff;
  color: #0050b3;
  border: 1px solid #bae7ff;
}
.bg-warning-light {
  background-color: #fff7e6;
  color: #d46b08;
  border: 1px solid #ffe7ba;
}
.bg-green-light {
  background-color: #f6ffed;
  color: #389e0d;
  border: 1px solid #d9f7be;
}
.bg-purple-light {
  background-color: #f9f0ff;
  color: #531dab;
  border: 1px solid #efdbff;
}

/* 检索按钮 */
.btn-retrieve {
  width: 70%;
  background-color: #fff;
  color: var(--color-brand);
  border: 1px solid var(--color-brand-light);
  box-shadow: 0 2px 8px rgba(44, 104, 255, 0.1);
  border-radius: var(--radius-full);
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size: 15px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 5px auto;
  transition: all 0.2s;
}
.btn-retrieve:active {
  background-color: var(--color-brand-light);
  transform: scale(0.99);
}

/* 搜索结果项 */
.search-result-item {
  background-color: #ffffff;
  border-radius: var(--radius-lg);
  padding: 16px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid var(--color-border-light);
  box-shadow: var(--shadow-sm);
}

/* 信息卡片 */
.info-card-light-blue {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  border-radius: var(--radius-xl);
  padding: 24px;
  margin-bottom: 25px;
  text-align: center;
  border: 1px solid rgba(44, 104, 255, 0.1);
}

.text-code-header {
  font-size: 28px;
  font-weight: bold;
  color: var(--color-brand);
  font-family: var(--font-mono);
  margin-right: 8px;
}

/* 大输入框 */
.input-large .van-field__input {
  font-size: 28px !important;
  font-weight: bold !important;
  color: var(--color-text-primary) !important;
  height: 50px !important;
}

/* Vant 标签覆盖 */
.van-tag--primary.van-tag--plain {
  color: var(--color-brand) !important;
  background-color: var(--color-brand-light) !important;
  border: none !important;
  padding: 2px 6px;
  border-radius: 6px;
  font-weight: 500;
}

/* ========== 弹窗卡片紧凑样式 ========== */
.card-home {
  padding: 12px 14px !important;
}

/* 批次标签缩小 */
.tag-brand-light {
  font-size: 11px;
  padding: 2px 8px;
}
