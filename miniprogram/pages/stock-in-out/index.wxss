/* pages/stock-in-out/index.wxss */
/* 使用 CSS 变量替换硬编码颜色 */

.scan-area {
  min-height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scan-icon-wrapper {
  padding: 30px;
  border-radius: 50%;
  background-color: var(--color-brand-light);
}

.manual-input-area {
  width: 100%;
}

.flex-row {
  display: flex;
}
.block {
  display: block;
}

/* 卡片样式 */
.card {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  margin: 12px;
  box-shadow: var(--shadow-sm);
}
