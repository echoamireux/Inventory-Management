/** app.wxss - 全局设计系统 **/
page {
  /* ========== 设计令牌 (Design Tokens) ========== */

  /* 品牌色 */
  --color-brand: #2C68FF;
  --color-brand-light: #EFF6FF;
  --color-brand-dark: #1A54E6;
  --color-brand-gradient: linear-gradient(135deg, #2C68FF, #1A54E6);

  /* 语义色 */
  --color-success: #16A34A;
  --color-success-light: #F0FDF4;
  --color-warning: #F97316;
  --color-warning-light: #FFF7ED;
  --color-danger: #EF4444;
  --color-danger-light: #FEF2F2;

  /* 中性色 */
  --color-text-primary: #111827;
  --color-text-secondary: #6B7280;
  --color-text-placeholder: #9CA3AF;
  --color-border: #E5E7EB;
  --color-border-light: #F3F4F6;
  --color-bg-page: #F7F8FA;
  --color-bg-card: #FFFFFF;

  /* 兼容旧版变量名 */
  --color-primary: var(--color-brand);
  --color-primary-light: var(--color-brand-light);
  --color-text-main: var(--color-text-primary);
  --color-text-sub: var(--color-text-secondary);

  /* 间距 */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 12px;
  --spacing-lg: 16px;
  --spacing-xl: 24px;
  --spacing-2xl: 32px;

  /* 圆角 */
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  --radius-full: 9999px;
  --radius-card: var(--radius-lg);

  /* 阴影 */
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.03);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.06);
  --shadow-card: var(--shadow-md);
  --shadow-brand: 0 4px 12px rgba(44, 104, 255, 0.3);

  /* 字体 */
  --font-mono: 'DINAlternate-Bold', 'SF Mono', 'Roboto Mono', monospace;

  /* 全局重置 */
  background-color: var(--color-bg-page);
  color: var(--color-text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;

  /* Vant 组件覆盖 */
  --button-primary-background-color: var(--color-brand);
  --button-primary-border-color: var(--color-brand);
  --cell-group-background-color: transparent;
}

/* ========== 布局工具类 ========== */
.container { box-sizing: border-box; min-height: 100vh; }
.flex-row { display: flex; flex-direction: row; }
.flex-col { display: flex; flex-direction: column; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.items-baseline { align-items: baseline; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-end { justify-content: flex-end; }
.h-full { height: 100%; box-sizing: border-box; }

/* ========== 间距工具类 ========== */
.p-10 { padding: 10px; }
.p-15 { padding: 15px; }
.p-20 { padding: 20px; }
.px-10 { padding-left: 10px; padding-right: 10px; }
.px-15 { padding-left: 15px; padding-right: 15px; }
.px-20 { padding-left: 20px; padding-right: 20px; }
.py-10 { padding-top: 10px; padding-bottom: 10px; }
.pt-10 { padding-top: 10px; }
.pt-20 { padding-top: 20px; }
.pb-10 { padding-bottom: 10px; }
.pb-20 { padding-bottom: 20px; }

.m-10 { margin: 10px; }
.mt-2 { margin-top: 2px; }
.mt-4 { margin-top: 4px; }
.mt-5 { margin-top: 5px; }
.mt-10 { margin-top: 10px; }
.mt-15 { margin-top: 15px; }
.mb-2 { margin-bottom: 2px; }
.mb-4 { margin-bottom: 4px; }
.mb-5 { margin-bottom: 5px; }
.mb-8 { margin-bottom: 8px; }
.mb-10 { margin-bottom: 10px; }
.mb-12 { margin-bottom: 12px; }
.mb-15 { margin-bottom: 15px; }
.mb-20 { margin-bottom: 20px; }
.mb-25 { margin-bottom: 25px; }
.ml-5 { margin-left: 5px; }
.ml-10 { margin-left: 10px; }
.mr-5 { margin-right: 5px; }
.mr-8 { margin-right: 8px; }
.mr-10 { margin-right: 10px; }
.mr-15 { margin-right: 15px; }
.pl-10 { padding-left: 10px; }
.pl-15 { padding-left: 15px; }

/* ========== 字体工具类 ========== */
.text-xs { font-size: 11px; }
.text-sm { font-size: 13px; }
.text-base { font-size: 14px; }
.text-md { font-size: 15px; }
.text-lg { font-size: 17px; }
.text-xl { font-size: 20px; }
.text-xxl { font-size: 24px; }
.text-3xl { font-size: 32px; line-height: 1.1; }
.text-4xl { font-size: 36px; line-height: 1.2; }
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: 600; }
.font-din { font-family: var(--font-mono); font-weight: bold; }
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
  max-width: 100%;
}

/* ========== 颜色工具类 ========== */
.text-brand { color: var(--color-brand); }
.text-main { color: var(--color-text-primary); }
.text-sub { color: var(--color-text-secondary); }
.text-tertiary { color: #9CA3AF; }
.text-placeholder { color: var(--color-text-placeholder); }
.text-success { color: var(--color-success); }
.text-warning { color: var(--color-warning); }
.text-danger { color: var(--color-danger); }
.text-white { color: #fff; }

.bg-page { background-color: var(--color-bg-page); }
.bg-white { background-color: #fff; }
.bg-brand { background-color: var(--color-brand); }
.bg-brand-light { background-color: var(--color-brand-light); }
.bg-success-light { background-color: var(--color-success-light); }
.bg-warning-light { background-color: var(--color-warning-light); }
.bg-danger-light { background-color: var(--color-danger-light); }

/* ========== 圆角工具类 ========== */
.rounded-sm { border-radius: var(--radius-sm); }
.rounded-md { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: var(--radius-full); }

/* ========== 阴影工具类 ========== */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }
.shadow-brand { box-shadow: var(--shadow-brand); }

/* ========== 边框工具类 ========== */
.border-bottom { border-bottom: 1px solid var(--color-border-light); }
.border-top { border-top: 1px solid var(--color-border-light); }
.border-b { border-bottom: 1px solid #ebedf0; }
.border-t { border-top: 1px solid #ebedf0; }
.border-gray-100 { border-color: #ebedf0; }

/* ========== 通用卡片样式 ========== */
.card {
  background: var(--color-bg-card);
  border-radius: var(--radius-card);
  box-shadow: var(--shadow-card);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.card-home {
  background: #FFFFFF;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-md);
}
.card-home-hover {
  background-color: #FAF9F8;
}

/* ========== 弹窗头部样式 ========== */
.popup-header-home {
  padding: var(--spacing-lg);
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid var(--color-border-light);
  min-height: 24px;
}
.header-title-home {
  font-size: 17px;
  font-weight: 600;
  color: var(--color-text-primary);
}
.header-title-home.abs-center {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}
.header-right-action {
  position: relative;
  z-index: 10;
  padding: 4px;
  display: flex;
}

/* ========== 输入框样式 ========== */
.input-home-wrapper {
  padding: 24px 20px;
  background: #fff;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-lg);
}
.input-home-row {
  display: flex;
  align-items: baseline;
  border-bottom: 1px solid var(--color-border);
  padding-bottom: 8px;
}
.input-home {
  flex: 1;
  height: 48px;
  font-size: 20px;
  font-weight: 600;
  color: var(--color-text-primary);
  font-family: var(--font-mono);
  caret-color: var(--color-brand);
}
.unit-text {
  font-size: 16px;
  color: var(--color-text-secondary);
  margin-left: 8px;
  font-weight: 500;
}

/* ========== 按钮样式 ========== */
.btn-home {
  background: var(--color-brand);
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  border-radius: var(--radius-lg);
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  border: none;
  box-shadow: var(--shadow-brand);
  width: 100%;
}
.btn-home:active {
  background: var(--color-brand-dark);
  opacity: 0.95;
}

/* ========== 标签样式 ========== */
.tag-brand-light {
  background: var(--color-brand-light);
  color: var(--color-brand);
  padding: 2px 8px;
  border-radius: var(--radius-sm);
  font-size: 12px;
  font-weight: 500;
}
.badge-expiry-home {
  background: var(--color-danger-light);
  color: var(--color-danger);
  padding: 1px 6px;
  border-radius: var(--radius-sm);
  font-size: 10px;
  margin-left: 6px;
}
.badge-archived-home {
  background: #F3F4F6;
  color: #6B7280;
  padding: 1px 6px;
  border-radius: var(--radius-sm);
  font-size: 10px;
  margin-left: 6px;
}

/* ========== 安全区域 ========== */
.px-safe { padding-left: 16px; padding-right: 16px; }
.pt-safe { padding-top: 10px; }
.pb-safe { padding-bottom: calc(env(safe-area-inset-bottom) + 16px); }
.popup-footer-safe {
  width: 100%;
  box-sizing: border-box;
  padding: var(--spacing-lg);
  padding-bottom: calc(env(safe-area-inset-bottom) + 16px);
  background: #fff;
  border-top: 1px solid var(--color-border-light);
  z-index: 999;
}

/* ========== 吸顶样式 ========== */
.sticky-top {
  position: sticky;
  top: 0;
  z-index: 100;
}

/* ========== 透明度 ========== */
.opacity-70 { opacity: 0.7; }
.opacity-80 { opacity: 0.8; }

/* ========== Z-Index ========== */
.z-index-10 { z-index: 10; }
.z-index-100 { z-index: 100; }
.z-relative { position: relative; z-index: 1; }

/* ========== 交互反馈 ========== */
.active-opacity:active { opacity: 0.85; }

/* ========== 提示框样式 ========== */
.alert-box-green {
  background-color: var(--color-success-light);
  border-radius: var(--radius-md);
  padding: 8px 12px;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
}
.text-alert-green { color: #15803D; font-size: 12px; }

.alert-box-orange {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}
.text-alert-orange { color: var(--color-warning); font-size: 12px; }

.alert-box-gray {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
  background: #F9FAFB;
  padding: 8px 12px;
  border-radius: var(--radius-md);
  margin-top: 8px;
}
.text-alert-gray { color: #6B7280; font-size: 12px; }

/* ========== 上下文栏 ========== */
.context-bar-home {
  background: var(--color-brand-light);
  border-radius: var(--radius-md);
  padding: 10px 16px;
  display: flex;
  align-items: center;
}

/* ========== 搜索覆盖 (专业化通用样式) ========== */
/*
   .search-transparent: 用于页面背景为灰色时，搜索框背景透出页面底色，
   且输入框内部为白色，形成卡片式悬浮感
*/
.search-transparent .van-search {
  background-color: transparent !important;
  padding: 10px 16px !important;
}
.search-transparent .van-search__content {
  background-color: var(--color-bg-card) !important;
  border-radius: var(--radius-full) !important;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--color-border-light);
}

/* 之前的老样式覆盖，暂时保留以免影响未迁移页面，但建议通过类名控制 */
/* .van-search__content { background-color: #F3F4F6 !important; } */

/* ========== 统一列表项规范 ========== */
/* 物料卡片 - 通用列表项 */
.material-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: 14px 16px;
  margin-bottom: 10px;
  box-shadow: var(--shadow-sm);
}
.material-card:active {
  background: #F9FAFB;
}
/* P3 优化: 临期预警卡片左侧边框强化 */
.material-card-expiring {
  border-left: 3px solid var(--color-warning);
  background: linear-gradient(90deg, var(--color-warning-light) 0%, var(--color-bg-card) 8%);
}
.material-card-expiring:active {
  background: linear-gradient(90deg, #FFEDD5 0%, #F9FAFB 8%);
}

/* 物料卡片 - 标题行 */
.material-card-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 4px;
}

/* 物料卡片 - 料号 (始终蓝色) */
.material-code {
  font-family: var(--font-mono);
  font-size: 16px; /* 与库存聚合列表 32rpx 一致 */
  font-weight: 600;
  color: var(--color-brand);
}

/* 物料卡片 - 名称 */
.material-name {
  font-size: 14px;
  color: var(--color-text-primary);
  font-weight: 500;
  margin-bottom: 6px;
}

/* 物料卡片 - 次标题 (灰色背景标签样式，与库存聚合列表一致) */
.material-subtitle-tag {
  font-size: 12px;
  color: var(--color-text-secondary);
  font-family: var(--font-mono);
  margin-top: 6px;
  margin-bottom: 6px;
  display: inline-flex;
  align-items: center;
  background: var(--color-bg-page);
  padding: 2px 8px;
  border-radius: var(--radius-md);
  width: fit-content;
}

/* 物料卡片 - 数量 (正常=蓝，临期=橙) */
.material-qty {
  font-family: var(--font-mono);
  font-size: 16px; /* 与料号一致 */
  font-weight: 600;
  color: var(--color-brand);
}
.material-qty.warning {
  color: var(--color-warning);
}
.material-qty-unit {
  font-size: 12px;
  font-weight: 400;
  margin-left: 2px;
}

/* ========== 统一标签规范 ========== */
.tag-base {
  display: inline-flex;
  align-items: center;
  padding: 2px 8px;
  border-radius: 6px;
  font-size: 11px;
  font-weight: 500;
  white-space: nowrap;
}

/* 蓝色标签 (分类/批次/数量) */
.tag-brand {
  background: var(--color-brand-light);
  color: var(--color-brand);
}

/* 警告标签 (临期) */
.tag-warning {
  background: var(--color-warning-light);
  color: var(--color-warning);
}

/* 成功标签 */
.tag-success {
  background: var(--color-success-light);
  color: var(--color-success);
}

/* 灰色标签 (辅助信息) */
.tag-gray {
  background: #F3F4F6;
  color: var(--color-text-secondary);
}

/* 临期徽章 */
.badge-expiry {
  background: var(--color-warning-light);
  color: var(--color-warning);
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
}

/* ========== 膜材专用样式 ========== */
/* 膜材：名称作为主标题 */
.material-name-primary {
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-primary);
  flex: 1;
  max-width: 60%;
}

/* 膜材：料号作为副标题 */
.material-code-secondary {
  font-family: var(--font-mono);
  font-size: 14px;
  font-weight: 500;
  color: var(--color-brand);
  margin-bottom: 6px;
}

/* ========== 弹窗标题规范 ========== */
/* 领料弹窗料号（缩小） */
.popup-code-title {
  font-family: var(--font-mono);
  font-size: 22px;
  font-weight: 600;
  color: var(--color-brand);
}

/* 领料弹窗数量（右对齐，与标题行对齐） */
.popup-qty-display {
  font-family: var(--font-mono);
  font-size: 28px;
  font-weight: 600;
  color: var(--color-brand);
  text-align: right;
}
.popup-qty-display.warning {
  color: var(--color-warning);
}

/* ========== P3 优化: 空状态组件定制 ========== */
.van-empty {
  padding: 40px 20px !important;
}
.van-empty__image {
  width: 120px !important;
  height: 120px !important;
  opacity: 0.6;
}
.van-empty__description {
  color: var(--color-text-secondary) !important;
  font-size: 14px !important;
  margin-top: 12px !important;
}


/* ========== 全局修复 Vant Dialog 按钮样式 ========== */
/* 强制按钮区域居中 */
.van-dialog__footer {
  text-align: center !important;
}
.van-dialog__footer--buttons {
  display: flex !important;
  justify-content: center !important;
}
.van-dialog__button {
  display: block !important;
  text-align: center !important;
}
.van-button {
  text-align: center !important;
}
.van-button__text {
  display: block !important;
  text-align: center !important;
  width: 100% !important;
}
/* 确认按钮使用标准蓝色 */
.van-dialog__confirm {
  color: #1989FA !important;
}
